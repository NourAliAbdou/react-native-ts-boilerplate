<resources>

    <color name="secondary_color">#e7c8c3</color>
    <!-- dark #535259 -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#25282A</item>
        <item name="android:colorControlActivated">#ADB5BD</item>
        <item name="android:textColorHighlight">#ADB5BD</item>
        <item name="android:fontFamily">ZillaSlab-Light</item>

        <item name="android:colorBackground">@color/secondary_color</item>
        <item name="android:statusBarColor">@color/secondary_color</item>

    </style>

    <!-- splash screen definition -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/secondary_color</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark">@color/splashscreen_bg</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#F28379</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>